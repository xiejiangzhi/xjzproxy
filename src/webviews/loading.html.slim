doctype html

html
  head
    meta charset="utf-8"
    meta name="viewport" content="initial-scale=1.0,user-scalable=no,maximum-scale=1,width=device-width"

    title Loading...

    css:
      html, body {
        height: 100%;
        padding: 0;
        margin: 0;
        overflow: hidden;
      }

      .text-info {
        color: #17a2b8!important;
      }

      @keyframes spinner-grow {
        0% { transform: scale(0); }
        50% { opacity: 1; }
      }
      .spinner-grow {
        display: inline-block;
        width: 3rem;
        height: 3rem;
        vertical-align: text-bottom;
        background-color: currentColor;
        border-radius: 50%;
        opacity: 0;
        animation: spinner-grow 1s linear infinite;
      }

      .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border: 0;
      }

  body 
    div style='height: 100%; display: flex; flex-wrap: wrap; align-items: center!important; justify-content: center!important;'
      .spinner-grow.text-info
        span.sr-only Loading...
